@page
@model HogarGestor.App.Presentacion.Pages_DbFamiliares.AdicionPatronCModel
@{
}
<form method="post">
     @* <input type="hidden" asp-for="familiar.Id"/> *@
    <div class="form-group">
        <label>Hora y Fecha</label>
        <input asp-for="patronCrecimiento.fechaHora" placeholder="Digite la fecha y hora:"class="form-control"/>
    </div>
    <div class="form-group">
        <label>Tipo</label>
        <select asp-for="patronCrecimiento.tipoPatronC" class="form-control">
            <option selected>Medida ...</option>
            <option value=0>Peso</option>
            <option value=1>Perimetro Cefalico</option>
            <option value=2>Talla (altura)</option>
            <option value=3>Medida Abdominal</option>
        </select>
    </div>
    <div class="form-group">
        <label>Documento</label>
        <input asp-for="patronCrecimiento.valor" placeholder="Digite la medida"class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary" asp-page-handler="Save">Crear Familiar</button>
</form>